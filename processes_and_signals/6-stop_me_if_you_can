#!/usr/bin/env bash
# This script terminates the process named "4-to_infinity_and_beyond" using process name matching.
shellcheck disable=SC2009 

PROCESS_NAME="4-to_infinity_and_beyond"

echo "Attempting to stop process: $PROCESS_NAME"

pkill -f "$PROCESS_NAME"

if [ $? -eq 0 ]; then
  echo "Process '$PROCESS_NAME' successfully stopped (or no such process was running)."
else
  echo "Failed to stop process '$PROCESS_NAME'. It might not be running or you lack sufficient permissions."
fi
